
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Appartments</h1>
            
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Appartments</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
 
    
<section class="content">
    <!-- Default box -->
    <div class="card" style="width:70%">
        <div class="card-header">
          <h3 class="card-title">Edit Appartment</h3>
            
          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body p-0">
            {{#each appartments}}
            <form ref='uploadForm' method="post" encType="multipart/form-data" action="/appartments/appartmentedit/{{this.id}}">
                
                <div class="card-body">
                    <div class="form-group">
                        <label for="userfullname">Appartment Name</label>
                        <input type="input" class="form-control" name="appartmentnumber" value="{{this.appartmentnumber}}" placeholder="Appartment Name">
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form> 
            {{/each}}
        </div>
            
    </div>
    <!-- /.card-body -->
</section>