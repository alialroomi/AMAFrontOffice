
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Appartments</h1>
            
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Appartments</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <section class="content-header">
        <a data-toggle="modal" data-target="#modal-addappartment"  href="#" class="btn btn-sm bg-gradient-success"><i class="fas fa-plus" style="margin-right: 5px;"></i>Add Appartments</a>
    </section>
    
    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card" style="width:70%">
        <div class="card-header">
          <h3 class="card-title">Appartments</h3>
            
          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects" >
              <thead>
                  <tr>
                      <th style="width: 1%">
                          #
                      </th>
                      <th style="width: 20%">
                          Appartment Number
                      </th>
                   
                  </tr>
              </thead>
              <tbody>
                  {{#each appartments}}
                        <tr>
                            <td style="width: 1%"></td>
                            <td style="width: 20%">{{this.appartmentnumber}}</td>
                             <td class="project-actions text-right">
                         
                          <a class="btn btn-info btn-sm" href="/appartments/appartmentedit/{{this.id}}">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                          <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal-deleteappartment" onclick="deleteappartment({{this.id}})" href="#">
                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                      </td>
                        </tr>
                  {{/each}}
              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>

<div class="modal fade" id="modal-deleteappartment" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Delete appartment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure to delete this appartment !! ... All Related rooms and customers will be deleted !</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-light deleteappartment">Confirm Delete</button>
            </div>
        </div>
    <!-- /.modal-content -->
    </div>
<!-- /.modal-dialog -->
</div>
<div class="modal fade" id="modal-addappartment" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-success">
            <div class="modal-header">
                <h4 class="modal-title">Add Appartment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form ref='uploadForm' method="post" encType="multipart/form-data" action="/appartments">
                <div class="card-body">
                    <div class="form-group">
                        <label for="appartmentname">Appartment Name</label>
                        <input type="input" required class="form-control" name="appartmentname" placeholder="Appartment Name">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Appartment</button>
                </div>
                </form> 
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
 <script>
       
        function deleteappartment(id){
            $('modal').addClass('show');
            $('.deleteappartment').on('click',function(){
                window.location= '/appartments/'+id;
            })
        }
    </script>